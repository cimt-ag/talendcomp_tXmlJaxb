<?xml version="1.0" encoding="UTF-8"?>

<COMPONENT>
	<HEADER 
		AUTHOR="cimt AG" 
		COMPATIBILITY="ALL"
		PLATEFORM="ALL" 
		RELEASE_DATE="20160715"
		SERIAL="" 
		STARTABLE="true" 
		STATUS="BETA" 
		VERSION="${project.version}">
		<SIGNATURE />
	</HEADER>

	<FAMILIES>
		<FAMILY>XML</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MIN_INPUT="0" MAX_INPUT="0"
			MIN_OUTPUT="0" MAX_OUTPUT="1" />
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>

		<PARAMETER 
			NAME="IS_ROOT" 
			FIELD="CHECK" 
			NUM_ROW="10"
			REQUIRED="true"
		>
			<DEFAULT>true</DEFAULT>
		</PARAMETER>

		<PARAMETER 
			FIELD="CLOSED_LIST" 
			NAME="SETUP" 
			NUM_ROW="20" 
			REQUIRED="true"
			SHOW_IF="IS_ROOT == 'true'"
		>
	    	<ITEMS DEFAULT="READ_FROM_INPUT">
	    		<ITEM NAME="READ_FROM_INPUT" VALUE="READ_FROM_INPUT" />
	    		<ITEM NAME="READ_FROM_INPUT_PLAIN_TEXT" VALUE="READ_FROM_INPUT_PLAIN_TEXT" />
	    		<ITEM NAME="READ_FROM_FILE" VALUE="READ_FROM_FILE" />
	    	</ITEMS>
		</PARAMETER>
		
	    <PARAMETER 
	    	NAME="SIMPLIFIED_LINE_BREAKS" 
	    	FIELD="CHECK" 
	    	NUM_ROW="30" 
	    	REQUIRED="true"
	    	SHOW_IF="(IS_ROOT == 'true') and (SETUP == 'READ_FROM_INPUT')">
	    	<DEFAULT>true</DEFAULT>
	    </PARAMETER> 
		
	    <PARAMETER 
	    	NAME="XML_CONTENT" 
	    	FIELD="MEMO_JAVA" 
	    	NUM_ROW="40" 
	    	REQUIRED="true"
	    	SHOW_IF="(IS_ROOT == 'true') and (SETUP == 'READ_FROM_INPUT')">
	    	<DEFAULT>""</DEFAULT>
	    </PARAMETER> 

	    <PARAMETER 
	    	NAME="XML_CONTENT_PLAIN_TEXT" 
	    	FIELD="MEMO_JAVA" 
	    	NUM_ROW="40" 
	    	REQUIRED="true"
	    	SHOW_IF="(IS_ROOT == 'true') and (SETUP == 'READ_FROM_INPUT_PLAIN_TEXT')">
	    	<DEFAULT></DEFAULT>
	    </PARAMETER> 

		<PARAMETER
			FIELD="FILE" 
			NAME="FILENAME" 
			NUM_ROW="40"
			REQUIRED="true" 
			SHOW_IF="(IS_ROOT == 'true') and (SETUP == 'READ_FROM_FILE')"
		>
			<DEFAULT>"/path/to/input_file.xml"</DEFAULT>
		</PARAMETER>

		<PARAMETER 
			NAME="PARENT_OBJECT_COMPONENT" 
			FIELD="COMPONENT_LIST" 
			NUM_ROW="60"
			FILTER="REGEXP:^(tXmlJaxbObjectInput)(.)*"
			REQUIRED="true"
			SHOW_IF="IS_ROOT == 'false'"
		/>

		<PARAMETER 
			NAME="ATTRIBUTE_PATH" 
			FIELD="TEXT" 
			REQUIRED="true" 
			NUM_ROW="70"
			SHOW_IF="IS_ROOT == 'false'"
		>
			<DEFAULT>"location.address"</DEFAULT>
		</PARAMETER>

		<PARAMETER 
			NAME="COLUMN_CONFIG" 
			FIELD="TABLE" 
			NUM_ROW="80" 
			NB_LINES="5" >
			<ITEMS BASED_ON_SCHEMA="true">
				<ITEM NAME="ATTRIBUTE_ALIAS" FIELD="TEXT" />
				<ITEM NAME="USE" FIELD="CHECK" />
				<ITEM NAME="IGNORE_MISSING" FIELD="CHECK" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER 
			NAME="SCHEMA" 
			FIELD="SCHEMA_TYPE" 
			REQUIRED="true" 
			NUM_ROW="90">
			<DEFAULT />
		</PARAMETER>

	</PARAMETERS>
	
	<ADVANCED_PARAMETERS>
		
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
	</CODEGENERATION>
	
	<RETURNS>
		<RETURN AVAILABILITY="AFTER" NAME="NB_LINE" TYPE="id_Integer" />
		<RETURN AVAILABILITY="FLOW" NAME="CURRENT_OBJECT" TYPE="id_Object" />
		<RETURN AVAILABILITY="AFTER" NAME="FILENAME" TYPE="id_String" />
	</RETURNS>
	
</COMPONENT>