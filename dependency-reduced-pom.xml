<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.cimt.talendcomp</groupId>
  <artifactId>cimt-talendcomp-xmldynamic</artifactId>
  <name>de.cimt.talendcomp.xmldynamic [${project.version}]</name>
  <version>3.3</version>
  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/cimt-ag/talendcomp_tXmlJaxb/issues</url>
  </issueManagement>
  <scm>
    <developerConnection>scm:git:https://github.com/cimt-ag/talendcomp_tXmlJaxb.git</developerConnection>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <encoding>${project.build.sourceEncoding}</encoding>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <configuration>
          <archive>
            <addMavenDescriptor>false</addMavenDescriptor>
            <manifestEntries>
              <Implementation-Title>cimt-talendcomp-xmldynamic</Implementation-Title>
              <Implementation-Version>${project.version}</Implementation-Version>
              <Implementation-Vendor>cimt-ag</Implementation-Vendor>
              <Implementation-Timestamp>${maven.build.timestamp}</Implementation-Timestamp>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>org.slf4j:slf4j-log4j12</include>
                  <include>org.slf4j:jcl-over-slf4j</include>
                </includes>
              </artifactSet>
              <createSourcesJar>true</createSourcesJar>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>de.cimt.talendcomp</groupId>
        <artifactId>cimt-talendcomp-maven-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <id>tXmlJaxbModel</id>
            <phase>install</phase>
            <goals>
              <goal>component</goal>
            </goals>
            <configuration>
              <componentName>tXmlJaxbModel</componentName>
            </configuration>
          </execution>
          <execution>
            <id>tXmlJaxbObjectInput</id>
            <phase>install</phase>
            <goals>
              <goal>component</goal>
            </goals>
            <configuration>
              <componentName>tXmlJaxbObjectInput</componentName>
              <noJars>true</noJars>
            </configuration>
          </execution>
          <execution>
            <id>tXmlJaxbObjectOutput</id>
            <phase>install</phase>
            <goals>
              <goal>component</goal>
            </goals>
            <configuration>
              <componentName>tXmlJaxbObjectOutput</componentName>
              <noJars>true</noJars>
            </configuration>
          </execution>
          <execution>
            <id>tXmlJaxbSave</id>
            <phase>install</phase>
            <goals>
              <goal>component</goal>
            </goals>
            <configuration>
              <componentName>tXmlJaxbSave</componentName>
              <noJars>true</noJars>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <componentBaseDir>target/talend_component/</componentBaseDir>
          <copyFromSourceBaseDir>src/main/talend_component</copyFromSourceBaseDir>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.17</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.colllib</groupId>
      <artifactId>colllib</artifactId>
      <version>1.6</version>
      <scope>compile</scope>
      <exclusions>
        <exclusion>
          <artifactId>commons-logging</artifactId>
          <groupId>commons-logging</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>javax.xml.bind</groupId>
      <artifactId>jaxb-api</artifactId>
      <version>2.3.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.sun.xml.bind</groupId>
      <artifactId>jaxb-core</artifactId>
      <version>2.3.0.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.sun.xml.bind</groupId>
      <artifactId>jaxb-impl</artifactId>
      <version>2.3.7</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.sun.xml.bind</groupId>
      <artifactId>jaxb-xjc</artifactId>
      <version>2.3.7</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13.2</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.7.30</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.eclipse</groupId>
      <artifactId>osgi</artifactId>
      <version>3.10.0-v20140606-1445</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <slf4j.version>1.7.30</slf4j.version>
    <project.build.componentProjectDirectory>talend_component/tXmlJaxbModel/</project.build.componentProjectDirectory>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
